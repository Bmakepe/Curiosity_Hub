<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/school_logo"
        android:src="@drawable/add_pic"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/school_logo"
        android:padding="5dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Machabeng College"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:id="@+id/schoolName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Maseru"
            android:textColor="@color/black"
            android:padding="2dp"
            android:id="@+id/SchoolDistrict"
            android:layout_below="@+id/schoolName"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/schoolArea"
            android:padding="2dp"
            android:text="Masowe II"
            android:textColor="@color/black"
            android:layout_below="@+id/schoolName"
            android:textSize="10sp"/>

    </RelativeLayout>

</RelativeLayout>