<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/ch_logo1"
            android:layout_centerHorizontal="true"
            android:id="@+id/curiosityLogo"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:letterSpacing="0.1"
            android:textColor="@color/identity_dark"
            android:layout_below="@+id/curiosityLogo"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="32sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sponsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/koetsa"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/sponsers_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponsors and Partners"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sec1"
            android:layout_below="@id/sponsers_heading"
            android:layout_marginTop="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/Moet"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/moet_logo_foreground"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/MOS"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/Moet"
                android:layout_toStartOf="@+id/Seliba"
                android:layout_centerVertical="true"
                android:src="@mipmap/mogysar_logo_foreground"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:id="@+id/Seliba"
                android:layout_alignParentEnd="true"
                android:src="@drawable/seliba"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/koetsa"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Developed by: Koetsa"/>

</RelativeLayout>